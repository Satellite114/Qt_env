{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CMake: configure",
            "command": "powershell",
            "args": [
                "-Command",
                "conda run -n base cmake -B build -S . \"-DCMAKE_PREFIX_PATH=$env:QTDIR\""
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "label": "CMake: configure and build",
            "command": "powershell",
            "args": [
                "-Command",
                "conda run -n base cmake -B build -S . \"-DCMAKE_PREFIX_PATH=$env:QTDIR\"; conda run -n base cmake --build build --config Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
    ]
}
